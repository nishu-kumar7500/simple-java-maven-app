pipeline
{
    agent {
        label 'jenkins-test'
    }
   parameters {
  choice choices: ['dev', 'test'], name: 'select_environment'
}


    environment {
        NAME = 'NISHU '
    }

    tools {
        maven 'mymaven'
    }
    stages {
        stage('build')
    {
            steps {
                sh 'mvn clean package -DskipTests=true'
            }
    }
        stage('test') {
            parallel {
                stage('testA') {
                    agent {label 'jenkins-test'}
                    steps {
                        echo 'This is test A'
                        sh "mvn test"
                    }
                }
                stage('testB') {
                    agent {label 'jenkins-dev'}
                    steps {
                        echo 'this is test B'
                        sh "mvn test"
                    }
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar'
                }
            }
        }
    }
}
